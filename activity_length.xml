<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeightActivity">

    <TextView
        android:id="@+id/Length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:fontFamily="serif"
        android:text="Length"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="36sp" />

    <Button
        android:id="@+id/convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="168dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Convert"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/lengthText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="126dp"
        android:ems="10"
        android:hint="Type Number Here"
        android:inputType="number"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/result"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:id="@+id/footToInches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/InchesToFoot"
        android:layout_alignStart="@+id/lengthText"
        android:layout_marginBottom="-224dp"
        android:text="Foot to Inches"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp" />

    <RadioButton
        android:id="@+id/InchesToFoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lengthText"
        android:layout_marginTop="224dp"
        android:text="Inches to Foot"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp" />

</RelativeLayout>
