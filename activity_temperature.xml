<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemperatureActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:fontFamily="serif"
        android:text="Temperature"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp" />

    <RadioButton
        android:id="@+id/FahtoCel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/CelToFah"
        android:layout_marginTop="204dp"
        android:text="From Fahrenheit to Celsius"
        android:textColor="@android:color/holo_green_dark" />

    <RadioButton
        android:id="@+id/CelToFah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="162dp"
        android:text="From Celsius to Fahrenheit"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Convert"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/tempText"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/FahtoCel"
        android:layout_marginTop="109dp"
        android:ems="10"
        android:hint="Enter Temperature"
        android:inputType="number"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:textAlignment="center"
        android:textSize="20sp" />

</RelativeLayout>
